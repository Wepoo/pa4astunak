%h1 Listing users

%table
  %thead
    %tr
      %th Name
      %th Last name
      %th Third name
      %th Birthday
      %th City
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.last_name
        %td= user.third_name
        %td= user.birthday
        %td= user.city
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

