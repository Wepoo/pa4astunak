= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :third_name
    = f.text_field :third_name
  .field
    = f.label :birthday
    = f.datetime_select :birthday
  .field
    = f.label :city
    = f.text_field :city
  .actions
    = f.submit 'Save'
